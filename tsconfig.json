{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "R/*": [
        "./resources/*"
      ],
      "T/*": [
        "./test/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./resources/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
